#:import Factory kivy.factory.Factory

<MyPopup@Popup>
	auto_dismiss: True
	size_hint: 0.2, 0.25
    padding: 10, 10, 10, 10
	title: "Record the EMG Signal"
	
	BoxLayout:
        cols: 1
        rows: 3
		orientation: "vertical"
		size: root.width, root.height
		Label:
			text: "Name of the file"
			font_size: 14
            text_size: self.width, None
            halign: 'left'
        TextInput:
            id: name_txt
            text: ''
            size_hint_y: None
            width: 40
            height: 40
        Button:
            size_hint_y: None
            width: 40
            height: 40
			text: "Save"
			font_size: 14
			on_press: app.root.text_popup(name_txt.text); root.dismiss()

